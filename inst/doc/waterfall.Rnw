%% This section initializes the waterfall library and creates three
%% graphs that will appear in throughout the document.
<<label=startup,include=FALSE,echo=FALSE>>=
library('waterfall')
data(jaquith)
data(rasiel)
@
<<label=rasielplot,include=FALSE,echo=FALSE>>=
waterfallplot(rasiel$value, names.arg=rasiel$label)
@
<<label=rasielchart,include=FALSE,echo=FALSE>>=
waterfallchart(value~label, data=rasiel, groups=subtotal)
@ v
<<label=jaquithchart,include=false,echo=FALSE>>=
waterfallchart(factor~score, data=jaquith)
@ 

